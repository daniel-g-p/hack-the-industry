<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <style>
      .wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100vw;
        min-height: 100vh;
        background: linear-gradient(120deg, #0037a5, #720b98);
        color: #ffffff;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <div class="container">
        <div class="mx-auto py-5">
          <h1 class="mb-4">HÃ¤ck the Industry</h1>
          <section class="accordion mb-4" id="accordionKeywords">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button
                  class="accordion-button"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#collapseKeywords"
                  aria-expanded="true"
                  aria-controls="collapseKeywords"
                >
                  Keywords
                </button>
              </h2>
              <div
                id="collapseKeywords"
                class="accordion-collapse collapse show"
                data-bs-parent="#accordionKeywords"
              >
                <div class="accordion-body">
                  <ul>
                    <% for (const keyword of profile.keywords) { %>
                    <li><%= keyword.keyword %> (<%= keyword.count %>)</li>
                    <% } %>
                  </ul>
                </div>
              </div>
            </div>
          </section>
          <section class="accordion mb-4" id="accordionAddress">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button
                  class="accordion-button"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#collapseAddress"
                  aria-expanded="true"
                  aria-controls="collapseAddress"
                >
                  Address
                </button>
              </h2>
              <div
                id="collapseAddress"
                class="accordion-collapse collapse show"
                data-bs-parent="#accordionAddress"
              >
                <div class="accordion-body">
                  <div><% profile.address %></div>
                </div>
              </div>
            </div>
          </section>
          <section class="accordion mb-4" id="accordionFacts">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button
                  class="accordion-button"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#collapseFacts"
                  aria-expanded="true"
                  aria-controls="collapseFacts"
                >
                  Facts
                </button>
              </h2>
              <div
                id="collapseFacts"
                class="accordion-collapse collapse show"
                data-bs-parent="#accordionFacts"
              >
                <div class="accordion-body">
                  <ul>
                    <% for (const fact of profile.facts) { %>
                    <li><%= fact %></li>
                    <% } %>
                  </ul>
                </div>
              </div>
            </div>
          </section>
          <section class="accordion mb-4" id="accordionJobs">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button
                  class="accordion-button"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#collapseJobs"
                  aria-expanded="true"
                  aria-controls="collapseJobs"
                >
                  Jobs
                </button>
              </h2>
              <div
                id="collapseJobs"
                class="accordion-collapse collapse show"
                data-bs-parent="#accordionJobs"
              >
                <div class="accordion-body">
                  <ul>
                    <% for (const job of profile.jobs) { %>
                    <li>
                      <%= job.role %> (<%= job.company %>, <%= job.location %>,
                      <%= job.source %>)
                    </li>
                    <% } %>
                  </ul>
                </div>
              </div>
            </div>
          </section>
          <section class="accordion" id="accordionNews">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button
                  class="accordion-button"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#collapseNews"
                  aria-expanded="true"
                  aria-controls="collapseNews"
                >
                  News
                </button>
              </h2>
              <div
                id="collapseNews"
                class="accordion-collapse collapse show"
                data-bs-parent="#accordionNews"
              >
                <div class="accordion-body">
                  <ul>
                    <% for (const news of profile.news) { %>
                    <li>
                      <%= news.title %> (<%= news.author %>, <%= news.date %>)
                    </li>
                    <% } %>
                  </ul>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js
    "></script>
  </body>
</html>
